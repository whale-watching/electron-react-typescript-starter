{
  "name": "electron-react-ts-starter",
  "version": "0.1.0",
  "main": "public/electron.js",
  "private": true,
  "dependencies": {
    "semantic-ui-react": "^0.87.2",
    "electron": "^5.0.6",
   "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "typescript": "3.5.2"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "npm run prebuild && electron-builder",
    "release": "npm react-build && electron-builder --publish=always",
    "build": "npm run prebuild && npm react-build && npm electron-build",
    "prebuild": "tsc ./src/electron.ts --outDir ./public",
    "start": "npm run prebuild && concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron-builder": "^20.44.4",
    "electron-is-dev": "^1.1.0",
    "wait-on": "^3.2.0" , 
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "@types/electron": "^1.6.10",
    "@types/semantic-ui": "^2.2.7",
    "watch": "^1.0.2"
  }
}
